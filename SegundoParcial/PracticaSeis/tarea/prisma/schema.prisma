generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Cambia a "mysql" o "postgresql" seg√∫n tu base de datos
  url      = env("DATABASE_URL")
}

model Paciente {
  id                  String   @id @default(uuid())
  nombre              String
  identificacion      Int      @unique
  periodoDeTiempoActual String
  gustos              String
  registros           Registro[]
}

model Registro {
  id        String   @id @default(uuid())
  idPaciente String
  idPlato   String
  fecha     DateTime
  paciente  Paciente @relation(fields: [idPaciente], references: [id])
}

model Plato {
  id          String @id @default(uuid())
  nombre      String
  descripcion String
  precio      Float
}
